<?xml version="1.0" encoding="UTF-8"?>
<Configuration>
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{yyyyMMdd'T'HHmmss.SSS} %level{length=3} - %C{1}:%M - %msg%n"/>
            <!--
            <PatternLayout pattern="%d %-5p [%t] %C{2} (%F:%L) - %m%n"/>
            -->
        </Console>
        <File name="CocamFile" fileName="log/cocam.log" immediateFlush="false" append="false">
            <PatternLayout pattern="%d{yyyyMMdd'T'HHmmss.SSS} %level{length=3} - %C{1}:%M - %msg%n"/>
        </File>
    </Appenders>
    <Loggers>
        <Root level="debug">
            <AppenderRef ref="Console"/>
        </Root>
        
        <Logger name="com.trksoft.cocam" level="info">
            <Appender-ref ref="CocamFile"/>
        </Logger>
    </Loggers>
</Configuration>

